<% include partials/header %>

<div class="ui centered container segment">
    <h1 class="ui center aligned header">Add new Book!</h1>
    <form class="ui form" action="/home" method="POST">
        <div class="field">
            <label for="name">Book Name</label>
            <input type="text" placeholder="new book.." name="bookname">
        </div>

        <div class="field">
            <label for="author">Author</label>
            <input type="text" placeholder="author.." name="author">
        </div>
        <div class="field">
                <label for="image">Image URL</label>
                <input type="text" placeholder="image URL.." name="image">
        </div>

        <div class="field">
            <label for="publishedYear"> Published Year</label>
            <input type="text" placeholder="published in.." name="publishedYear">
        </div>

        <div class="field">
            <label for="genre">Genre</label>
            <input type="text" placeholder="genre.." name="genre">
        </div>

        <div class="field">
                <label for="description">Description</label>
               <textarea name="description" id="" cols="30" rows="10">Description</textarea>
            </div>
            
        <button class="ui black basic button" type="submit">Add</button>
        <a class="ui grey basic button" href="/home">Back</a>
    </form>
</div>

