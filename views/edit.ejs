<% include partials/header %>

<div class="ui centered container segment">
    <h1 class="ui center aligned header">Edit <%= book.bookname %></h1>
    <form class="ui form" action="/home/<%= book._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="name">Book Name</label>
            <input type="text"  name="bookname" value="<%= book.bookname %>">
        </div>

        <div class="field">
            <label for="author">Author</label>
            <input type="text"  name="author" value="<%= book.author %>">
        </div>
        <div class="field">
                <label for="image">Image URL</label>
                <input type="text" name="image" value="<%= book.image %>">
        </div>

        <div class="field">
            <label for="publishedYear"> Published Year</label>
            <input type="text"  name="publishedYear" value="<%= book.publishedYear %>">
        </div>

        <div class="field">
            <label for="genre">Genre</label>
            <input type="text"  name="genre" value="<%= book.genre %>">
        </div>

        <div class="field">
                <label for="description">Description</label>
               <textarea name="description" id="" cols="30" rows="10"><%= book.description %></textarea>
            </div>
            
        <button class="ui black basic button" type="submit">Update</button>
        <a class="ui grey basic button" href="/home/<%= book._id %>">Back</a>
    </form>
</div>

<% include partials/footer %>